<table class="table table-striped" id="tableGuidelines">
    <thead>
    <tr>
        <th style="width:60%;">Guidelines</th>
        <th style="width:20%;">Drugs</th>
        <th style="width:20%;">Genes</th>
    </tr>
    </thead>
    <tbody>
    {{#each this}}
    <tr>
        <td>
            <p><em><a href="{{url}}">{{name}}</a></em></p>
        </td>
        <td>{{#each drug}}<div>{{this}}</div>{{/each}}</td>
        <td>{{#each gene}}<div>{{this}}</div>{{/each}}</td>
    </tr>
    {{/each}}
    </tbody>
</table>
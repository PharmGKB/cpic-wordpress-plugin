<table class="table table-striped" id="tableGuidelines">
    <thead>
    <tr>
        <th style="width:20%;">Drug</th>
        <th style="width:20%;">Gene</th>
        <th style="width:60%;">Summary</th>
    </tr>
    </thead>
    <tbody>
    {{#each this}}
    <tr>
        <td>{{#each relatedChemicals}}<div>{{name}}</div>{{/each}}</td>
        <td>{{#each relatedGenes}}<div>{{symbol}}</div>{{/each}}</td>
        <td>
            {{#each xrefs}}
            <p><em><a href="{{xrefId}}">guideline</a></em></p>
            {{/each}}
        </td>
    </tr>
    {{/each}}
    </tbody>
</table>